{
  "name": "codex-apps-sdk-dual-mode-spike",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Dual-mode Apps SDK + Codex connector spike (tool-first fallback with optional UI host mode).",
  "scripts": {
    "dev": "tsx src/server.ts",
    "dev:host": "tsx src/codex-flavor-host.ts",
    "dev:plan1:canary": "tsx src/plan1-canary-server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/src/server.js",
    "test": "vitest run",
    "remotion:studio": "remotion studio remotion/index.ts",
    "remotion:compositions": "remotion compositions remotion/index.ts",
    "remotion:render:integration-demo": "remotion render remotion/index.ts OpenAIAppsCodexIntegrationDemo out/openai-apps-codex-integration.mp4",
    "validate:matrix": "tsx scripts/validate-matrix.ts",
    "apps:list": "tsx scripts/codex-app-list.ts",
    "apps:health": "tsx scripts/codex-app-health.ts",
    "apps:smoke:mention": "tsx scripts/codex-app-mention-smoke.ts",
    "plan1:baseline": "tsx scripts/plan1-capture-baseline.ts",
    "plan1:figma:parity": "tsx scripts/plan1-figma-codex-parity.ts",
    "plan1:canary:availability": "tsx scripts/plan1-codex-canary-availability.ts",
    "plan1:reliability": "tsx scripts/plan1-reliability.ts",
    "plan1:decision": "tsx scripts/plan1-generate-decision-artifact.ts",
    "plan1:run": "npm run plan1:baseline && npm run plan1:figma:parity && npm run plan1:canary:availability && npm run plan1:reliability && npm run plan1:decision"
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@remotion/cli": "^4.0.429",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "remotion": "^4.0.429",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  }
}
